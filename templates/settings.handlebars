<head>
      <style>
            body { font-family: Arial, sans-serif; background-color: #f0f2f5; margin: 0; padding: 0; }
    .container { width: 90%; max-width: 800px; margin: 40px auto; }
    </style>
</head>

<body>
  <div class="body flex-grow-1 px-3">
    <div class="container-lg">
        <p class="lead">Change user settings and manage your account.</p>

        <div class="row g-4">

            <div class="card">
              <h3 style="padding: 20px">Account</h3>
              <div class="card-bodying">
                {{#if mssg}}
                    <div class="alert alert-{{flashType}}" role="alert">
                        {{mssg}}
                    </div>
                {{/if}}
                <form action="/settings" method="post">
                      <input class="form-control" type="text" name="uname" placeholder="New Username" value={{user.name}} required><br>
                      <input class="form-control" type="password" name="n_psswd" placeholder="New Password"><br>
                      <input class="form-control" type="password" name="c_psswd" placeholder="Confirm Password"><br>
                      <input class="form-control" type="text" name="phone" placeholder="New Phone Number" value="{{user.phone_number}}" required><br>
                      <input class="form-control" type="text" name="email" placeholder="New Email" value="{{user.email}}" required><br>

                    <div class="row g-4" style="margin-top:15px"> 
                      <div class="col-md-3">
                        <input class="form-control" id="o_psswd" type="password" name="o_psswd" placeholder="Confirm current password" required>
                      </div>
                      <div class="col-md-3">
                        <input type="hidden" name="token" value="{{csrfToken}}">
                        <input class="btn btn-primary" type="submit" value="Save Changes">
                      </div>
                    </div>
                    <div id="emailHelp" class="form-text">Enter your old password to save changes</div>
                </form>
              </div>
            </div>
        </div>
    </div>
  </div>
</body>